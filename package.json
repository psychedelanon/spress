    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "i18next": "^25.3.1",
    "i18next-fs-backend": "^2.6.0",
    "ioredis": "^5.3.2",
    "node-cron": "^4.2.0",
    "pino": "^9.7.0",
    "prom-client": "^15.1.3",
    "@vercel/node": "^5.3.7",
    "pusher": "^5.2.0",
    "pusher-js": "^8.4.0",
    "socket.io": "^4.7.5",
